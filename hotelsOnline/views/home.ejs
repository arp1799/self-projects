<%- include("partials/header") %>
<div style="width: 100%;
max-height: 80%;
margin-top: -1em;
position: relative;">
<div style="width: 100%;
height: 100%;            
position: absolute;z-index: +1; text-align: center">
        <header style="margin-top:15%; height:47%; background: rgba(17, 17, 17, 0.7); color:beige" class="jumbotron jumbotron-fluid">
                <div class="container">
                    <h1><strong>Welcome To HotelLite </strong></h1>
                    <p style="font-size:1.5rem;"><em>Here you will get hand-picked hotels all over from india....</em></p>
                    <!-- <a class="btn btn-primary btn-md" href="/hotels/newhotel">Add Hotel</a></button> -->
                    <p >
                        <form style="margin-left: 35%" action="/hotels" method="GET" class="form-inline">
                            <div class="form-group">
                                <input type="text" name="search" placeholder="Hotel Search...." class="form-control"/>
                                <input type="submit" value="search" class="btn btn-primary"/>
            
                            </div>
                        </form>
                    </p>
                </div>
            </header>
</div>
<div>
<div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            
          <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
          <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            
                <div class="carousel-item active">
                        <img style="height:95%;" src="<%= hotels[0].image %>" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                          <h5><%= hotels[0].name %></h5>
                          <p>Hotel Tagline</p>
                        </div>
                </div>
                <% for(var i=1;i<=2;i++){ %>
                    <div class="carousel-item">
                            <img style="height:95%;" src="<%= hotels[i].image %>" class="d-block w-100" alt="...">
                            <div class="carousel-caption d-none d-md-block">
                              <h5><%= hotels[i].name %></h5>
                              <p>Hotel tagline</p>
                            </div>
                    </div>
                <% } %>
            
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
</div>

</div>


<h1>Landing Page</h1>

<a href="/hotels">View Hotels</a>

<%- include("partials/footer") %>