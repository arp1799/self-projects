<%- include("../partials/header") %>
<div class="container">
        <h1 style="text-align:center;"> Edit <%=hotel.name%></h1>
    <div class="row">
        <div style="width:40%;margin:2rem auto;">
            <form action="/hotels/<%= hotel._id %>/edit?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class=" form-group">
                    <input class="form-control" type="text" name="hotel[name]" value="<%=hotel.name%>">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" accept="image/*">
                </div>
                <div class=" form-group">    
                        <input class="form-control" type="number" name="hotel[price]" value="<%=hotel.price%>" min="0.00" step="1.00"> 
                </div>
                <div class=" form-group">    
                        <input class="form-control" type="text" name="hotel[desc]" value="<%=hotel.desc%>"> 
                </div>
                <div class=" form-group">   
                    <button class="btn btn-lg btn-outline-primary btn-block">Submit!</button>   
                </div>
            </form>    
        </div>
    </div>
</div>
<a href="/hotels">Go back</a>

<%- include("../partials/footer") %>